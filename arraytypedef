#include <iostream>
using namespace std;
int main(){
int size;
cout << "Enter size of an array ";
cin >> size;
int *array = new int[size];
cout << "Input " << size << endl;
for (int i = 0; i < size ;i++)
{ cin >> array[i]; }
cout << "The contents of the array ";
for (int i = 0; i < size ;i++)
{ cout << array[i] << " "; }
delete [] array;
return 0;
}
